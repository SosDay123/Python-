dreamers = {'ljl','wc','xy','zb','lsy'}
girls = {'mmf','lsy','syj'}
result = dreamers.difference(girls)
print(result)
dreamers.difference_update(girls)
print(dreamers)
result = dreamers.union(girls)
print(result)
dreamers.update(girls)
print(dreamers)
result = dreamers.intersection(girls)
print(result)
girls.intersection_update(girls)
print(girls)
