def my_print(text,delay = 0.2):
    for ch in text:
        print(ch,end='')
        time.sleep(delay)
my_print('咔咔咔咔咔咔扩买买买，\n原谅周围的人，\n哈哈哈哈哈\n   ——莫言')

def add(x,y):
    return x+y
print(add(66,33))
print(add("三国","演义"))
def multi_sum(*args):
    s=0
    for item in args:
        s+= item
    return s
x = multi_sum(3,4,5)
print(x)
